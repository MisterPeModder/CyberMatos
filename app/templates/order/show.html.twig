{% extends 'base.html.twig' %}

{% block title %}Order
{% endblock %}

{% block body %}
	<h1>Mon panier</h1>

	{% if items | length > 0 %}

		<table class="table">
			<thead>
				<tr>
					<th>Image</th>
					<th>Produit</th>
					<th>Prix</th>
					<th>Quantit√©</th>
					<th>Total</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}
					<tr>
						<td><img src="{{ asset(item.product.photo) }}" width="100px" alt=""></td>
						<td>{{item.product.name}}</td>
						<td>{{item.product.price}}</td>
						<td>{{item.quantity}}</td>
						<td>{{item.product.price * item.quantity}}</td>
						<td>
							<a href="{{path('app_remove_to_cart', {'id': item.product.id})}}" class="btn btn-danger btn-sm">
								<i class="fas fa-trash">
									delete</i>
							</a>
						</td>
					</tr>
				{%  endfor %}
			</tbody>
			<tfoot>
				<td colspan="3">Total:
				</td>
				<td>{{total}}</td>
				<td></td>
			</tfoot>

		</table>
		<a href="{{ path('app_product_list') }}">back to list</a>
		{# 
				<a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>
																						
				{{ include('order/_delete_form.html.twig') }} #}


	{% else %}
		<p>Le panier est vide</p>
	{%  endif %}


{% endblock %}
