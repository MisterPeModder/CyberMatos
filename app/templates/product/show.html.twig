{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
	<h1>Product</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ product.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ product.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ product.description }}</td>
			</tr>
			<tr>
				<th>Image</th>
				<td><img src="{{ asset(product.image) }}" width="150px" alt=""></td>
			</tr>
			<tr>
				<th>Créé</th>
				<td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_product_index') }}">Retour au catalogue</a>

	<a href="{{ path('app_product_edit', {'id': product.id}) }}">Modifier</a>

	{{ include('product/_delete_form.html.twig') }}
{% endblock %}
